<div class="container">
    <h1>Add your favorite singer</h1>
    {{#each errors}}
    <div class="alert alert-danger">
        {{this}}
    </div>
    {{/each}}

    
    <form method="post">
       
           
        <div class="form-group">
            <label for="singerName">Name</label>
            <input class="form-control" id="singerName" name="singerName" />
        </div>
        <div class="form-group">
            <label for="singerStory">Description</label>
            <textarea class="form-control" id="singerStory" name="singerStory" placeholder="Introduction....">
            </textarea>
        </div>
        
        
        <button class="btn btn-warning" type="submit">Submit</button>
    </form>
</div>